{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./src/lib/@types",
      "./node_modules/@types"
    ],
    "outDir": "dist/compiled",
    "baseUrl": "./src"
  },
  "include": [
    "src",
    "test"
  ]
}
